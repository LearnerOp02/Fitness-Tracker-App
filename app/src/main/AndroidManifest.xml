<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessProject">

        <!-- ───── AUTH FLOW ───── -->
        <activity android:name=".MainActivity" android:exported="true"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".RegisterActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- ── Password Reset Flow (3 steps + success) ── -->
        <activity android:name=".ForgetPasswordActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".OtpVerifyActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".ResetPasswordActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".ResetSuccessActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- ───── MAIN APP ───── -->
        <activity android:name=".ProfileSetupActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".HomeActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 7. Add Workout -->
        <activity android:name=".AddWorkoutActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 8. Workout History -->
        <activity android:name=".WorkoutHistoryActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 9. Monthly Progress -->
        <activity android:name=".MonthlyProgressActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 10. BMI Calculator -->
        <activity android:name=".BmiCalculatorActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 11 + 12. Workout Plan (Personalized & Adaptive — same Activity, intent extra "adaptive") -->
        <activity android:name=".WorkoutPlanActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 13. Discipline Score -->
        <activity android:name=".DisciplineScoreActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 14. Visual Progress -->
        <activity android:name=".VisualProgressActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 15. Notifications -->
        <activity android:name=".NotificationsActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 16. Settings -->
        <activity android:name=".SettingsActivity" android:exported="false"
            android:theme="@style/Theme.FitnessProject.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- 17. Logout Confirm -->
        <activity android:name=".LogoutConfirmActivity" android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:screenOrientation="portrait" />

    </application>
</manifest>