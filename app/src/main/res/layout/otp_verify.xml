<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:orientation="vertical">

    <!-- ── Top bar: back + step indicator ── -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/btn_icon_bg"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvStepIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Step 2 of 3"
            android:textColor="#E94560"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ── Email OTP icon ── -->
    <ImageView
        android:id="@+id/otpIcon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_email_otp"
        android:contentDescription="OTP Icon" />

    <!-- ── Title ── -->
    <TextView
        android:id="@+id/tvOtpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Verify OTP"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- ── Subtitle ── -->
    <TextView
        android:id="@+id/tvOtpSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="We sent a 6-digit code to"
        android:textColor="#AAAAAA"
        android:textSize="13sp"
        android:gravity="center" />

    <!-- ── Email address shown ── -->
    <TextView
        android:id="@+id/tvOtpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="user@email.com"
        android:textColor="#E94560"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- ── Card ── -->
    <androidx.cardview.widget.CardView
        android:id="@+id/otpCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#16213E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <!-- Label -->
            <TextView
                android:id="@+id/tvOtpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter 6-Digit OTP"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="14dp" />

            <!-- 6 OTP digit boxes -->
            <LinearLayout
                android:id="@+id/layoutOtpBoxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="18dp">

                <EditText
                    android:id="@+id/etOtp1"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:background="@drawable/otp_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etOtp2"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:background="@drawable/otp_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etOtp3"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:background="@drawable/otp_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etOtp4"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:background="@drawable/otp_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etOtp5"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:background="@drawable/otp_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp" />

                <EditText
                    android:id="@+id/etOtp6"
                    android:layout_width="42dp"
                    android:layout_height="52dp"
                    android:background="@drawable/otp_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Countdown timer -->
            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="OTP expires in: 02:00"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="18dp" />

            <!-- Verify button -->
            <Button
                android:id="@+id/btnVerifyOtp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_primary_bg"
                android:text="VERIFY OTP"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <!-- Resend row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Didn't receive OTP? "
                    android:textColor="#AAAAAA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend"
                    android:textColor="#E94560"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>