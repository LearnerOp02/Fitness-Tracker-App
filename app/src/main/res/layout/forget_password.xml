<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/btn_icon_bg"
        android:contentDescription="Back" />

    <!-- Step indicator -->
    <TextView
        android:id="@+id/tvStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:text="Step 1 of 3"
        android:textColor="#E94560"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Lock Icon -->
    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_lock"
        android:contentDescription="Lock Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvForgotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lockIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Forgot Password?"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvForgotSubtitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Enter your registered email address. We'll send you a 6-digit OTP to reset your password."
        android:textColor="#AAAAAA"
        android:textSize="13sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/forgotCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotSubtitle"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#16213E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etForgotEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Enter your registered email"
                android:textColorHint="#555555"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btnSendOTP"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_primary_bg"
                android:text="SEND OTP"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Back to Login -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember your password? "
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="#E94560"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>