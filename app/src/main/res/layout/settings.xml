<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:orientation="vertical">

    <!-- Top bar -->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingTop="48dp" android:paddingStart="16dp" android:paddingEnd="16dp" android:paddingBottom="12dp">
        <ImageButton android:id="@+id/btnBack" android:layout_width="44dp" android:layout_height="44dp"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" android:background="@drawable/btn_icon_bg" android:contentDescription="Back" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true" android:text="Settings"
            android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:padding="16dp">

            <!-- Profile section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="ACCOUNT" android:textColor="#E94560" android:textSize="11sp"
                android:textStyle="bold" android:layout_marginBottom="10dp" />

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp" app:cardBackgroundColor="#16213E">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Update Profile -->
                    <RelativeLayout android:id="@+id/rowUpdateProfile"
                        android:layout_width="match_parent" android:layout_height="56dp"
                        android:padding="16dp" android:background="?attr/selectableItemBackground">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="ðŸ‘¤  Update Profile" android:textColor="#FFFFFF"
                            android:textSize="14sp" android:layout_centerVertical="true" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#AAAAAA" android:textSize="20sp"
                            android:layout_alignParentEnd="true" android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#2A2A5A" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" />

                    <!-- Change Password -->
                    <RelativeLayout android:id="@+id/rowChangePassword"
                        android:layout_width="match_parent" android:layout_height="56dp"
                        android:padding="16dp" android:background="?attr/selectableItemBackground">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="ðŸ”‘  Change Password" android:textColor="#FFFFFF"
                            android:textSize="14sp" android:layout_centerVertical="true" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#AAAAAA" android:textSize="20sp"
                            android:layout_alignParentEnd="true" android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Preferences section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="PREFERENCES" android:textColor="#E94560" android:textSize="11sp"
                android:textStyle="bold" android:layout_marginBottom="10dp" />

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp" app:cardBackgroundColor="#16213E">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Notifications toggle -->
                    <RelativeLayout android:id="@+id/rowNotifications"
                        android:layout_width="match_parent" android:layout_height="56dp"
                        android:padding="16dp" android:background="?attr/selectableItemBackground">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="ðŸ””  Notifications &amp; Reminders" android:textColor="#FFFFFF"
                            android:textSize="14sp" android:layout_centerVertical="true" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#AAAAAA" android:textSize="20sp"
                            android:layout_alignParentEnd="true" android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#2A2A5A" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" />

                    <!-- BMI Calculator -->
                    <RelativeLayout android:id="@+id/rowBmi"
                        android:layout_width="match_parent" android:layout_height="56dp"
                        android:padding="16dp" android:background="?attr/selectableItemBackground">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="âš–ï¸  BMI Calculator" android:textColor="#FFFFFF"
                            android:textSize="14sp" android:layout_centerVertical="true" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#AAAAAA" android:textSize="20sp"
                            android:layout_alignParentEnd="true" android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- App info section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="APP INFO" android:textColor="#E94560" android:textSize="11sp"
                android:textStyle="bold" android:layout_marginBottom="10dp" />

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp" app:cardBackgroundColor="#16213E">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="56dp"
                        android:padding="16dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â„¹ï¸  Version" android:textColor="#FFFFFF"
                            android:textSize="14sp" android:layout_centerVertical="true" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="1.0.0" android:textColor="#AAAAAA" android:textSize="13sp"
                            android:layout_alignParentEnd="true" android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout -->
            <Button android:id="@+id/btnLogout" android:layout_width="match_parent"
                android:layout_height="52dp" android:background="@drawable/btn_outline_bg"
                android:text="LOG OUT" android:textColor="#E94560"
                android:textSize="15sp" android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>