<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="Setup Your Profile"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="We use this to personalize your fitness plan"
            android:textColor="#AAAAAA"
            android:textSize="13sp" />

        <!-- Accent line -->
        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="28dp"
            android:background="#E94560" />

        <!-- Avatar / Profile Photo -->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_default_avatar"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Photo" />

            <ImageView
                android:id="@+id/ivEditPhoto"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_camera"
                android:background="@drawable/btn_primary_bg"
                android:padding="5dp"
                android:contentDescription="Edit Photo" />
        </RelativeLayout>

        <!-- ─── PERSONAL INFO CARD ─── -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL INFO"
            android:textColor="#E94560"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:layout_marginBottom="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#16213E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Age -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age (years)"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="e.g. 25"
                    android:textColorHint="#555555"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <!-- Gender -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:buttonTint="#E94560"
                        android:gravity="center_vertical"
                        android:background="@drawable/radio_btn_bg"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="12dp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:buttonTint="#E94560"
                        android:gravity="center_vertical"
                        android:background="@drawable/radio_btn_bg"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="12dp" />

                    <RadioButton
                        android:id="@+id/rbOther"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Other"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:buttonTint="#E94560"
                        android:gravity="center_vertical"
                        android:background="@drawable/radio_btn_bg"
                        android:paddingStart="12dp" />
                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ─── BODY MEASUREMENTS CARD ─── -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BODY MEASUREMENTS"
            android:textColor="#E94560"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:layout_marginBottom="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#16213E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Height & Weight Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Height -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height (cm)"
                            android:textColor="#AAAAAA"
                            android:textSize="13sp"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="e.g. 175"
                            android:textColorHint="#555555"
                            android:inputType="numberDecimal"
                            android:padding="14dp"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Weight -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight (kg)"
                            android:textColor="#AAAAAA"
                            android:textSize="13sp"
                            android:layout_marginBottom="6dp" />

                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="e.g. 70"
                            android:textColorHint="#555555"
                            android:inputType="numberDecimal"
                            android:padding="14dp"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- BMI Preview Box -->
                <RelativeLayout
                    android:id="@+id/bmiPreviewBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bmi_preview_bg"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Your BMI"
                        android:textColor="#AAAAAA"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvBMIValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#E94560"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvBMICategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text=""
                            android:textColor="#AAAAAA"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ─── FITNESS GOAL CARD ─── -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FITNESS GOAL"
            android:textColor="#E94560"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            android:layout_marginBottom="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#16213E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <Spinner
                    android:id="@+id/spinnerProfileGoal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp" />

                <!-- Activity Level -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Level"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerActivityLevel"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_bg"
                    android:padding="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Profile Button -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/btn_primary_bg"
            android:text="SAVE &amp; CONTINUE"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="36dp" />

    </LinearLayout>
</ScrollView>