<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ── Top bar: back + step indicator ── -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/btn_icon_bg"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvStepIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Step 3 of 3"
                android:textColor="#E94560"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- ── Key icon ── -->
        <ImageView
            android:id="@+id/resetIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_reset_key"
            android:contentDescription="Reset Password" />

        <!-- ── Title ── -->
        <TextView
            android:id="@+id/tvResetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="New Password"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- ── Subtitle ── -->
        <TextView
            android:id="@+id/tvResetSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Create a strong new password for your account."
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:gravity="center" />

        <!-- ── Card ── -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resetCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#16213E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <!-- New Password label -->
                <TextView
                    android:id="@+id/tvNewPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <!-- New Password input + eye toggle -->
                <RelativeLayout
                    android:id="@+id/layoutNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Enter new password"
                        android:textColorHint="#555555"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:paddingEnd="52dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/btnToggleNewPassword"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_eye_off"
                        android:background="@android:color/transparent"
                        android:contentDescription="Toggle new password visibility" />
                </RelativeLayout>

                <!-- Confirm New Password label -->
                <TextView
                    android:id="@+id/tvConfirmPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm New Password"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <!-- Confirm Password input + eye toggle -->
                <RelativeLayout
                    android:id="@+id/layoutConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/etConfirmNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/edit_text_bg"
                        android:hint="Re-enter new password"
                        android:textColorHint="#555555"
                        android:inputType="textPassword"
                        android:padding="14dp"
                        android:paddingEnd="52dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/btnToggleConfirmPassword"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_eye_off"
                        android:background="@android:color/transparent"
                        android:contentDescription="Toggle confirm password visibility" />
                </RelativeLayout>

                <!-- Password strength text -->
                <TextView
                    android:id="@+id/tvPasswordStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp" />

                <!-- Reset button -->
                <Button
                    android:id="@+id/btnResetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/btn_primary_bg"
                    android:text="RESET PASSWORD"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>