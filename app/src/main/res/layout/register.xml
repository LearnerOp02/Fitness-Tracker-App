<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="FitLife"
            android:textColor="#E94560"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="Create Your Account"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />

        <!-- Divider line -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"
            android:background="#E94560" />

        <!-- Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Enter your full name"
            android:textColorHint="#666666"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Enter your email"
            android:textColorHint="#666666"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Create a password"
            android:textColorHint="#666666"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Re-enter your password"
            android:textColorHint="#666666"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>

        <!-- Phone Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Enter your phone number"
            android:textColorHint="#666666"
            android:inputType="phone"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="24dp"/>

        <!-- Fitness Goal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness Goal"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/spinnerGoal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:layout_marginBottom="24dp"/>

        <!-- Terms Checkbox -->
        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms and Privacy Policy"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:buttonTint="#E94560"
            android:layout_marginBottom="24dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/btn_primary_bg"
            android:text="CREATE ACCOUNT"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"/>

        <!-- Login Redirect -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textColor="#E94560"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>