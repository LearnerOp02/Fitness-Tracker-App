<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar -->
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingTop="48dp" android:paddingStart="16dp" android:paddingEnd="16dp" android:paddingBottom="12dp">
            <ImageButton android:id="@+id/btnBack" android:layout_width="44dp" android:layout_height="44dp"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back" android:background="@drawable/btn_icon_bg"
                android:contentDescription="Back" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerInParent="true" android:text="BMI Calculator"
                android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold" />
        </RelativeLayout>

        <!-- BMI Result big display -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp" app:cardBackgroundColor="#16213E">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:gravity="center" android:padding="28dp">

                <TextView android:id="@+id/tvBmiValue" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="--"
                    android:textColor="#E94560" android:textSize="64sp" android:textStyle="bold" />

                <TextView android:id="@+id/tvBmiCategory" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Enter your details below"
                    android:textColor="#AAAAAA" android:textSize="16sp" android:layout_marginTop="4dp" />

                <!-- Color bar -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="12dp"
                    android:orientation="horizontal" android:layout_marginTop="16dp">
                    <View android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:background="#2196F3" />
                    <View android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:background="#4CAF50" />
                    <View android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:background="#FF9800" />
                    <View android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1" android:background="#F44336" />
                </LinearLayout>

                <!-- Marker -->
                <RelativeLayout android:layout_width="match_parent" android:layout_height="16dp">
                    <View android:id="@+id/bmiMarker" android:layout_width="4dp"
                        android:layout_height="16dp" android:background="#FFFFFF"
                        android:layout_marginStart="0dp" />
                </RelativeLayout>

                <!-- Range labels -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginTop="4dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Under\n18.5"
                        android:textColor="#2196F3" android:textSize="10sp" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Normal\n18.5-24.9"
                        android:textColor="#4CAF50" android:textSize="10sp" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Overweight\n25-29.9"
                        android:textColor="#FF9800" android:textSize="10sp" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="Obese\n30+"
                        android:textColor="#F44336" android:textSize="10sp" android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Input card -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp" app:cardBackgroundColor="#16213E">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:padding="20dp">

                <!-- Height -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Height (cm)" android:textColor="#AAAAAA" android:textSize="13sp"
                    android:layout_marginBottom="8dp" />
                <EditText android:id="@+id/etBmiHeight" android:layout_width="match_parent"
                    android:layout_height="52dp" android:background="@drawable/edit_text_bg"
                    android:hint="e.g. 170" android:textColorHint="#555555"
                    android:inputType="numberDecimal" android:padding="14dp"
                    android:textColor="#FFFFFF" android:textSize="15sp" android:layout_marginBottom="16dp" />

                <!-- Weight -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Weight (kg)" android:textColor="#AAAAAA" android:textSize="13sp"
                    android:layout_marginBottom="8dp" />
                <EditText android:id="@+id/etBmiWeight" android:layout_width="match_parent"
                    android:layout_height="52dp" android:background="@drawable/edit_text_bg"
                    android:hint="e.g. 70" android:textColorHint="#555555"
                    android:inputType="numberDecimal" android:padding="14dp"
                    android:textColor="#FFFFFF" android:textSize="15sp" android:layout_marginBottom="8dp" />

                <TextView android:id="@+id/tvBmiTip" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text=""
                    android:textColor="#AAAAAA" android:textSize="12sp"
                    android:layout_marginBottom="20dp" />

                <Button android:id="@+id/btnSaveBmi" android:layout_width="match_parent"
                    android:layout_height="52dp" android:background="@drawable/btn_primary_bg"
                    android:text="SAVE TO PROFILE" android:textColor="#FFFFFF"
                    android:textSize="15sp" android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>