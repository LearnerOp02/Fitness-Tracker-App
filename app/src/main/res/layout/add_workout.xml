<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ── Top bar ── -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/btn_icon_bg"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add Workout"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- ── Date badge ── -->
        <TextView
            android:id="@+id/tvTodayDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Today — Mon, Jan 01"
            android:textColor="#E94560"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- ── Card ── -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#16213E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Exercise Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise Type"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerExerciseType"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:layout_marginBottom="16dp" />

                <!-- Workout Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout Name"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etWorkoutName"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="e.g. Push-ups, Running, Squats"
                    android:textColorHint="#555555"
                    android:inputType="textCapSentences"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <!-- Duration -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration (minutes)"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etDuration"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="e.g. 30"
                    android:textColorHint="#555555"
                    android:inputType="number"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <!-- Intensity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intensity Level"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="12dp" />

                <!-- Intensity radio group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <RadioGroup
                        android:id="@+id/rgIntensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Low"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#E94560" />

                        <RadioButton
                            android:id="@+id/rbMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Medium"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#E94560"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rbHigh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="High"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#E94560" />
                    </RadioGroup>
                </LinearLayout>

                <!-- Calories (auto-calc) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Calories Burned"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCaloriesEstimate"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bmi_preview_bg"
                    android:gravity="center_vertical"
                    android:paddingStart="14dp"
                    android:text="— kcal"
                    android:textColor="#E94560"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- Notes -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes (optional)"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="How did it go?"
                    android:textColorHint="#555555"
                    android:inputType="textMultiLine"
                    android:padding="14dp"
                    android:gravity="top"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp" />

                <!-- Save button -->
                <Button
                    android:id="@+id/btnSaveWorkout"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/btn_primary_bg"
                    android:text="SAVE WORKOUT"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>