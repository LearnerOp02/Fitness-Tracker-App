<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1A2A4A" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="#E94560" />
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#1A2A4A" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#E94560" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#111122" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="#333355" />
        </shape>
    </item>

    <!-- Default / normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0F1E3D" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="#4A4A7A" />
        </shape>
    </item>

</selector>